{
  "name": "openrct2-benchwarmer",
  "version": "0.5.0",
  "description": "Add benches and trash cans to all of your paths with one click",
  "main": "build/benchwarmer.js",
  "scripts": {
    "build": "rollup -c",
    "use": "cpy ./build/benchwarmer.js \"${OPENRCT2_DIR}/plugin\" --rename=benchwarmer.js",
    "test": "jest",
    "lint": "eslint .",
    "fmt": "prettier --write . && yarn lint --fix",
    "watch": "npm-watch",
    "dev": "yarn watch build",
    "clean": "rm -rf build coverage tags",
    "start": "yarn build && $OPENRCT2_BIN intro",
    "release": "lerna publish -y"
  },
  "watch": {
    "build": "src/*.js"
  },
  "author": "Tom Scott <tubbo@psychedeli.ca>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@semantic-release/changelog": "^5.0.1",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "commitizen": "^4.2.3",
    "cpy-cli": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-watch": "^0.11.0",
    "prettier": "^2.2.1",
    "rollup": "^2.26.2",
    "ts-jest": "^26.5.6",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/tubbo/openrct2-benchwarmer.git"
  }
}
